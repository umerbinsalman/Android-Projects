<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_in_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingBottom="56dp"
        android:text="SIGN IN"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_in_textview"
        android:layout_marginLeft="40dp"
        android:text="Username"
        android:textSize="24sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_in_textview"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/username_textview" />

    <TextView
        android:id="@+id/password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_in_textview"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="-52dp"
        android:text="Password"
        android:textSize="24sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_in_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="-52dp"
        android:layout_toRightOf="@id/password_textview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:text="LOGIN" />

</RelativeLayout>